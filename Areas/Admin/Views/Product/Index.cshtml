@model List<Product>

<div class="container my-4">
    <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-header bg-primary bg-gradient text-white text-center py-3 rounded-top">
            <h2 class="font-weight-bold">Product List</h2>
        </div>
       
        <div class="card-body p-4">
            <table class="table table-bordered table-hover">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>Title</th>
                        <th>ISBN</th>
                        <th>Price</th>
                        <th>Author</th>
                        <th>Category</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.Title</td>
                            <td>@obj.ISBN</td>
                            <td>@obj.ListPrice</td>
                            <td>@obj.Author</td>
                            <td></td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-warning rounded-pill mx-2 d-flex align-items-center">
                                        <i class="bi bi-pencil-square me-2"></i> Edit
                                    </a>
                                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger rounded-pill mx-2 d-flex align-items-center">
                                        <i class="bi bi-trash me-2"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-end mt-4">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary rounded-pill px-4">
                    <i class="bi bi-patch-plus"></i> Create New Product
                </a>
            </div>
        </div>
        <div class="card-footer text-center bg-light border-0 rounded-bottom">
            <small class="text-muted">Manage your product easily</small>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
