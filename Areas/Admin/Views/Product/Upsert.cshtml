@model ProductVM

<div class="container my-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary bg-gradient text-white p-3 rounded-top">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="font-weight-bold"> @(Model.Product.Id!=0?"Update":"Create") Product</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <form  method="post" class="row" enctype="multipart/form-data">
                <input asp-for="Product.Id" hidden />
                <div class="form-group mb-3">
                    <div class="form-group mb-3">
                        <label asp-for="Product.Title" class="col-form-label font-weight-bold">Product Name</label>
                        <input asp-for="Product.Title" type="text" class="form-control rounded-pill" placeholder="Enter product name" />
                        <span asp-validation-for="Product.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Product.Description" class="col-form-label font-weight-bold">Description</label>
                        <textarea asp-for="Product.Description" class="form-control rounded-pill" placeholder="Enter Description"></textarea>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Product.ISBN" class="col-form-label font-weight-bold">ISBN</label>
                        <input asp-for="Product.ISBN" type="number" class="form-control rounded-pill" placeholder="Enter ISBN" />
                        <span asp-validation-for="Product.ISBN" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Product.Author" class="col-form-label font-weight-bold">Author</label>
                        <input asp-for="Product.Author" type="text" class="form-control rounded-pill" placeholder="Enter Author Name" />
                        <span asp-validation-for="Product.Author" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Product.ListPrice" class="col-form-label font-weight-bold">ListPrice</label>
                        <input asp-for="Product.ListPrice" type="number" class="form-control rounded-pill" placeholder="Enter List Price" />
                        <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Product.Price" class="col-form-label font-weight-bold">Price</label>
                        <input asp-for="Product.Price" type="number" class="form-control rounded-pill" placeholder="Enter Price" />
                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Product.Price50" class="col-form-label font-weight-bold">Price50</label>
                        <input asp-for="Product.Price50" type="number" class="form-control rounded-pill" placeholder="Enter Price50" />
                        <span asp-validation-for="Product.Price50" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Product.Price100" class="col-form-label font-weight-bold">Price100</label>
                        <input asp-for="Product.Price100" type="number" class="form-control rounded-pill" placeholder="Enter Price100" />
                        <span asp-validation-for="Product.Price100" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Product.CategoryId" class="col-form-label font-weight-bold">Price100</label>
                        <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select rounded-pill" placeholder="Enter Price100">
                            <option disabled selected>--Select Category--</option>
                        </select>
                        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Product.ImageUrl" class="col-form-label font-weight-bold">Upload Image</label>
                        <input type="file" name="file" class="form-control rounded-pill" />
                        <span asp-validation-for="Product.ImageUrl" class="text-danger"></span> 
                    </div>

                </div>
                <div class="d-flex justify-content-between">
                    <div class="form-group">
                    @if (Model.Product.Id != 0 )
                    {
                        <button type="submit" class="btn btn-primary rounded-pill px-4">Update</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary rounded-pill px-4">Create</button>
                    }
                    </div>
                    <div>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary rounded-pill px-4">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
        <div class="card-footer text-center bg-light border-0 rounded-bottom">
            <small class="text-muted">Manage your product easily</small>
        </div>
    </div>
</div>

