@model Category

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary bg-gradient text-white p-3 rounded-top">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="font-weight-bold">Create Category</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <form method="post">
                <div class="form-group mb-3">
                    <label asp-for="Name" class="col-form-label font-weight-bold">Category Name</label>
                    <input asp-for="Name" type="text" class="form-control rounded-pill" placeholder="Enter category name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="DisplayOrder" class="col-form-label font-weight-bold">Display Order</label>
                    <input asp-for="DisplayOrder" type="number" class="form-control rounded-pill" placeholder="Enter display order" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary rounded-pill px-4">Create</button>
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary rounded-pill px-4">Back to List</a>
                </div>
            </form>
        </div>
        <div class="card-footer text-center bg-light border-0 rounded-bottom">
            <small class="text-muted">Manage your categories easily</small>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
